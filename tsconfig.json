{
  "compilerOptions": {
    "rootDir": "./src",
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM"],
    "target": "ES2017",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}